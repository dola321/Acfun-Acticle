<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_background"
    android:paddingTop="12dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="10dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <zmoriga.com.acticle.widget.FloorsView
            android:id="@+id/floors_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:orientation="vertical">
        </zmoriga.com.acticle.widget.FloorsView>


        <ImageView
            android:id="@+id/comment_user_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/floors_view" />

        <TextView
            android:id="@+id/comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorFontGray"
            android:text="test"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:layout_alignTop="@+id/comment_user_img"
            android:layout_toRightOf="@+id/comment_user_img"
            android:layout_toEndOf="@+id/comment_user_img" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="time"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:layout_below="@+id/comment_username"
            android:layout_alignLeft="@+id/comment_username"
            android:layout_alignStart="@+id/comment_username" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="#10"
            android:layout_below="@+id/floors_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/comment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:text="test test test"
            android:layout_below="@+id/comment_user_img"
            android:layout_alignLeft="@+id/comment_user_img"
            android:layout_alignStart="@+id/comment_user_img" />


</RelativeLayout>